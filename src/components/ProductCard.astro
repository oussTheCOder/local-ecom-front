const {title , price ,fakeprice , imgUrl ,slug} = Astro.props
---


<a href={`products/${slug}`}  class="relative  flex flex-col overflow-hidden rounded-lg border">
    <div class="aspect-square overflow-hidden">
      <!-- <img class="h-full w-full object-cover transition-all duration-300 group-hover:scale-125" src={imgUrl} alt="" /> -->
